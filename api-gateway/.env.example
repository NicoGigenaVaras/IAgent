# Configuración del API Gateway
# Copia este archivo como .env y ajusta los valores según tu entorno

# Puerto del API Gateway
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=0.0.0.0

# URLs de los microservicios
ORCHESTRATOR_SERVICE_URL=http://localhost:8001
CORE_SERVICE_URL=http://localhost:8002
LLM_SERVICE_URL=http://localhost:8003
SPEECH_SERVICE_URL=http://localhost:8004
EVALUATION_SERVICE_URL=http://localhost:8005

# Configuración de CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Configuración de timeouts (en segundos)
HTTP_TIMEOUT=30
CONNECTION_TIMEOUT=10

# Configuración de logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Configuración de seguridad (opcional)
JWT_SECRET_KEY=tu_clave_secreta_muy_segura_aqui
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Configuración de rate limiting (opcional)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
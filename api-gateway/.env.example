# Configuración del API Gateway
# Copia este archivo como .env y ajusta los valores según tu entorno
# NOTA: Este servicio ahora lee la configuración desde el .env principal del proyecto

# Puerto del API Gateway (se lee desde .env principal)
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=0.0.0.0

# Puertos de los microservicios (se leen desde .env principal)
CORE_SERVICE_PORT=8002
CORE_SERVICE_HOST=localhost

SPEECH_SERVICE_PORT=8004
SPEECH_SERVICE_HOST=localhost

EVALUATION_SERVICE_PORT=8005
EVALUATION_SERVICE_HOST=localhost

# Configuración de CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Configuración de timeouts (en segundos)
HTTP_TIMEOUT=30
CONNECTION_TIMEOUT=10

# Configuración de logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Configuración de seguridad (opcional)
JWT_SECRET_KEY=tu_clave_secreta_muy_segura_aqui
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Configuración de rate limiting (opcional)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
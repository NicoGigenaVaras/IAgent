# Gateway Service
WAF_MODE=detect
JWT_PUBLIC_KEY=/keys/public.pem
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Core Service
POSTGRES_URI=postgresql://user:pass@postgres:5432/interviews
REDIS_URI=redis://redis:6379/0
JWT_PRIVATE_KEY=/keys/private.pem
JWT_PUBLIC_KEY=/keys/public.pem
JWT_ACCESS_EXPIRES=3600
JWT_REFRESH_EXPIRES=604800
INVITE_TOKEN_EXPIRES=86400

# Orchestrator Service
STT_SERVICE_URL=http://speech:8003
LLM_SERVICE_URL=http://llm:8004
TTS_SERVICE_URL=http://speech:8003
WS_HEARTBEAT_INTERVAL=30
MAX_CONNECTIONS_PER_INTERVIEW=2

# Speech Service
STT_MODEL=whisper-large-v3
STT_DEVICE=cuda
STT_LANGUAGE=es
STT_TASK=transcribe
TTS_PROVIDER=coqui
TTS_MODEL=tts_models/es/css10/vits
TTS_DEVICE=cuda

# Optional Cloud Speech Providers
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=
GOOGLE_APPLICATION_CREDENTIALS=

# LLM Service
OPENAI_API_KEY=your-api-key
ANTHROPIC_API_KEY=your-api-key
VLLM_URL=http://vllm:8000
DEFAULT_PROVIDER=openai
DEFAULT_MODEL=gpt-4
MAX_TOKENS=2000
TEMPERATURE=0.7
STREAM_CHUNK_SIZE=10
RPM_LIMIT=60
TPM_LIMIT=100000

# Evaluation & Reporting Service
MONGO_URI=mongodb://mongo:27017/eval
POSTGRES_URI=postgresql://user:pass@postgres:5432/eval
PDF_TEMPLATE_DIR=/app/templates
MAX_REPORT_PAGES=50
BATCH_SIZE=10
PROCESSING_TIMEOUT=30

# Database Credentials
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
POSTGRES_DB=interviews

# Logging & Monitoring
LOG_LEVEL=INFO
ENABLE_TRACING=true

#api-key LLM for pipecat
GOOGLE_API_KEY=
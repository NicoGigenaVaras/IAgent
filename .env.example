# Gateway Service
WAF_MODE=detect
JWT_PUBLIC_KEY=/keys/public.pem
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Core Service
REDIS_URI=redis://redis:6379/0
JWT_PRIVATE_KEY=/keys/private.pem
JWT_PUBLIC_KEY=/keys/public.pem
JWT_ACCESS_EXPIRES=3600
JWT_REFRESH_EXPIRES=604800
INVITE_TOKEN_EXPIRES=86400

# Orchestrator Service
STT_SERVICE_URL=http://speech:8003
LLM_SERVICE_URL=http://llm:8004
TTS_SERVICE_URL=http://speech:8003
WS_HEARTBEAT_INTERVAL=30
MAX_CONNECTIONS_PER_INTERVIEW=2

# Evaluation & Reporting Service
PDF_TEMPLATE_DIR=/app/templates
MAX_REPORT_PAGES=50
BATCH_SIZE=10
PROCESSING_TIMEOUT=30

# Database Credentials

# Logging & Monitoring
LOG_LEVEL=INFO
ENABLE_TRACING=true


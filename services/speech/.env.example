# Configuración del Speech Service

# Configuración del servidor (se usa la configuración del .env principal)
# Los valores del .env principal tienen prioridad:
# SPEECH_SERVICE_HOST=0.0.0.0
# SPEECH_SERVICE_PORT=8004
# Valores locales como fallback:
SPEECH_HOST=0.0.0.0
SPEECH_PORT=8004


# Configuración de almacenamiento
STORAGE_PATH=./app/storage

# Configuración de logging
LOG_LEVEL=INFO

# Configuración de desarrollo
DEBUG=false
RELOAD=true
DEVELOPMENT_MODE=true
DEBUG_LEVEL=INFO

# Configuración de Supabase
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Configuración de Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# Tiempo de expiración por defecto en segundos
REDIS_DEFAULT_EXPIRE=3600

# Google API Key para Gemini (necesario para el LLM)
GOOGLE_API_KEY=

# Groq API Key (para usar GroqLLMService en pipecat_service)
GROQ_API_KEY=

# Configuración de Simli (Avatar AI)
SIMLI_API_KEY=your_simli_api_key_here
SIMLI_FACE_ID=your_simli_face_id_here

# Configuración de Deepgram (Speech-to-Text)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Configuración de ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id_here

# Máximo número de preguntas técnicas a incluir en el contexto
MAX_TECHNICAL_QUESTIONS=10
# Máximo número de preguntas generales a incluir en el contexto
MAX_GENERAL_QUESTIONS=5